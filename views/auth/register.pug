extends ../layout/index

block contenido

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold.text-blue-500= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold.cursor-pointer(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value=usuario ? usuario.nombre : '')
                        
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold.cursor-pointer(for="Email") Email
                        input#Email.w-full.px-3.py-2.border.border-gray-400(placeholder="email" type="text" name="email" value=usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold.cursor-pointer(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-400(placeholder="password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold.cursor-pointer(for="repetirpassword") Repetir Password
                        input#repetirpassword.w-full.px-3.py-2.border.border-gray-400(placeholder="Repetir password" type="password" name="repetirpassword")
                    
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs" ) ¿Ya tienes cuenta? inicia sesión
                        a(href="/auth/lost-password" class="text-gray-500 text-xs" ) ¿Olvidaste tu contraseña?  
                    input(class="w-full bg-green-600 hover:bg-green-400 py-3 cursor-pointer text-white" value="registrar" type="submit")
                     
